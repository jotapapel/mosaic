import graphics from "./graphics.tle"
import font from "./font.tle"
import [ mouse, keyboard ] from "./io.tle"
import UI from "./ui.tle"

@global function BOOT ()
	@global var TextElement = UI.Text{"hello world!"}
end

@global function TIC ()
	graphics.clear(graphics.BRIGHT_WHITE)
	TextElement:draw(0, 0, graphics.RED, UI.LEFT)
	mouse.update()
end